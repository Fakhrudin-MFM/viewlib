<!-- fileshare modal - start -->
<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Sharing</h4>
  </div>
  <div class="modal-body">
    <div class="table-loading" style="z-index: 1000;">
      <div class="fa fa-refresh fa-spin table-loader" style="top: 42px;"></div>
    </div>
    <div class="form-group">
      <div class="share-file-menu-btn-wrap">
        <input class="toggler" id="share_<%= escapedId %>_sharebtn" type="checkbox" name="shareSet" data-handle=".share-block" />
        <label for="share_<%= escapedId %>_sharebtn">Share link</label>
      </div>
      <div class="input-block share-block" style="display: none;">
        <input type="text" class="share-link form-control share-block" id="share_<%= escapedId %>_sharelink" value="" readonly />
        <span class="copy-clip glyphicon glyphicon-copy" data-copytarget="#share_<%= escapedId %>_sharelink" title="copy"></span>
      </div>
    </div>
    <div class="share-block" style="display: none;"><div class="form-group" style="display: none;">
        <input id="share_<%= escapedId %>_permissions" type="checkbox" name="permissions" />
        <label for="share_<%= escapedId %>_permissions">Allow for editing</label>
    </div></div>
    <div class="form-group share-block" style="display: none;">
        <input class="toggler" id="share_<%= escapedId %>_passwordSet" type="checkbox" name="passwordSet" data-handle="#share_<%= escapedId %>_password" />
        <label for="share_<%= escapedId %>_passwordSet">Password protect</label>
        <input id="share_<%= escapedId %>_password" type="password" class="form-control" value="" 
        placeholder="Enter a new password"
        name="password" style="display: none;" autocomplete="new-password"/>
    </div>
    <div class="form-group share-block" style="display: none;">
        <input class="toggler" id="share_<%= escapedId %>_expirationSet" type="checkbox" name="expirationSet" data-handle="#share_<%= escapedId %>_expiration" />
        <label for="share_<%= escapedId %>_expirationSet">Set expiration date</label>
        <input id="share_<%= escapedId %>_expiration" type="text" class="form-control" value="" name="expiration" style="display: none;" />
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default share-apply">Apply</button>
    <a href="#" type="button" class="btn btn-default share-block" role="button" target="_blank" style="display: none;">Go to storage</a>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
<!-- fileshare modal - end -->
